<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_title"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <TextView
        android:id="@+id/selected_images_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAppearance="?attr/textAppearanceBody1" />

    <Button
        android:id="@+id/select_images_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/select_images" />

    <RadioGroup
        android:id="@+id/crop_mode_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/crop_mode_stretch_cropped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crop_mode_stretch_cropped" />

        <RadioButton
            android:id="@+id/crop_mode_max_fit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crop_mode_max_fit" />
    </RadioGroup>
</LinearLayout>
